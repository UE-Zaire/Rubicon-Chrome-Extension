{
  "manifest_version": 2,

  "name": "Rubicon",
  "description": "Keep track of your history/tabs!",
  "version": "0.0.1",

  "icons": {
    "16": "assets/logo.png",
    "48": "assets/logo.png",
    "128": "assets/logo.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["/static/css/app.css"],
      "js": ["/static/js/app.js"],
      "run_at": "document_end"
    }
  ],

  "permissions": [
    "tabs",
    "cookies",
    "<all_urls>",
    "storage"
  ]
}